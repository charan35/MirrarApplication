<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageRoverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[4]" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/roverRoverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/aileron_thin"
            android:text="Rover: Curiosity"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/photoIdRoverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"

            android:fontFamily="@font/aileron_thin"
            android:text="Photo: 689599"
            android:textAlignment="center"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cameraLongNameRoverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Camera: Navigation Camera"
            android:textSize="16dp"
            android:fontFamily="@font/aileron_thin"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/cameraShortNameRoverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Camera short name: NAVCAM"
            android:textSize="16dp"
            android:fontFamily="@font/aileron_thin"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/dateRoverView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/aileron_thin"
            android:textAlignment="center"

            android:layout_marginBottom="12dp"
            android:text="Date: 2019-05-3" />


    </LinearLayout>

</LinearLayout>